@model IEnumerable<Gifts_Store.Models.Home>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="body_scroll">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Home List</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Admin</a></li>
                    <li class="breadcrumb-item">Homes</li>
                </ul>
                <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>
                <a class="btn btn-success btn-icon float-right" asp-action="Create" type="button"><i class="zmdi zmdi-plus"></i></a>

            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-hover product_item_list c_table theme-color mb-0">
                            <thead>
                                <tr>


                                    <th>
                                        @Html.DisplayNameFor(model => model.Contentt)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Slide1)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Slide2)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Slide3)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Logo)
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>

                                        <td>
                                            <h5>
                                                @Html.DisplayFor(modelItem => item.Contentt)
                                            </h5>
                                        </td>
                                        <td>
                                            <img src="@Url.Content("~/images/"+item.Slide1)" width="60" alt="Product img">
                                        </td> 
                                        <td>
                                            <img src="@Url.Content("~/images/"+item.Slide2)" width="60" alt="Product img">
                                        </td>  
                                        <td>
                                            <img src="@Url.Content("~/images/"+item.Slide3)" width="60" alt="Product img">
                                        </td>

                                        <td>
                                            <img src="@Url.Content("~/images/"+item.Logo)" width="60" alt="Product img">
                                        </td>

                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default waves-effect waves-float btn-sm waves-green">Edit</a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default waves-effect waves-float btn-sm waves-red">Details</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default waves-effect waves-float btn-sm waves-red">Delete</a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card">
                    <div class="body">
                        <ul class="pagination pagination-primary m-b-0">
                            <li class="page-item"><a class="page-link" href="javascript:void(0);"><i class="zmdi zmdi-arrow-left"></i></a></li>
                            <li class="page-item active"><a class="page-link" href="javascript:void(0);">1</a></li>
                            <li class="page-item"><a class="page-link" href="javascript:void(0);">2</a></li>
                            <li class="page-item"><a class="page-link" href="javascript:void(0);">3</a></li>
                            <li class="page-item"><a class="page-link" href="javascript:void(0);">4</a></li>
                            <li class="page-item"><a class="page-link" href="javascript:void(0);"><i class="zmdi zmdi-arrow-right"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
