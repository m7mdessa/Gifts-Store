						{
							<h6 style="text-align:center ; color: red;">
								@TempData["ErroMessage"]

							</h6>
						}
						@if (TempData["SuccessMessage"] != null)
						{
							<h6 style="text-align:center ; color: red;">
								@TempData["SuccessMessage"]
							</h6>
						}
						@if (TempData["ErrorMessage"] != null)
						{
							<h6 style="text-align:center ; color: red;">
								@TempData["ErrorMessage"]
							</h6>

						}
						<form asp-action="Login" enctype="multipart/form-data">

								<div class="form-group">
									<label for="singin-email-2">Username </label>
								<input type="text" asp-for="Username" class="form-control" name="Username" placeholder="Your Username">
								<span asp-validation-for="Username" class="text-danger"></span>

								</div><!-- End .form-group -->

								<div class="form-group">
									<label for="singin-password-2">Password </label>
								<input type="password" asp-for="Passwordd" class="form-control" id="password" name="Passwordd" placeholder="Your Password">
								<div class="password-toggle-icon">
									<i class="toggle-password-icon toggle-password-show" data-feather="eye"></i>
									<i class="toggle-password-icon toggle-password-hide" data-feather="eye-off"></i>
								</div>
								<span asp-validation-for="Passwordd" class="text-danger"></span>

								</div><!-- End .form-group -->

								<div class="form-footer">
									<button type="submit" class="btn btn-outline-primary-2">
										<span>LOG IN</span>
										<i class="icon-long-arrow-right"></i>
									</button>



								<a asp-action="Fpass" asp-controller="Auth" class="forgot-link">Forgot Your Password?</a>
								<a asp-action="Register" asp-controller="Auth" class="forgot-link">Create Account</a>

								</div><!-- End .form-footer -->
							</form>
