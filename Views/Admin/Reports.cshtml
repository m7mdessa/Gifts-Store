@model Tuple<IEnumerable<Report>,IEnumerable<Userr>>

@{
    ViewData["Title"] = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var chartData = ViewBag.ChartData;

}

<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="header">
                <h2><strong>Reports</strong> </h2>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Reports" id="myForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input id="startDate" name="startDate" type="date" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input id="endDate" name="endDate" type="date" class="form-control" />
                        </div>

                        <div class="form-group">
                            <input type="submit" onclick="submitForm()" value="Search" class="btn btn-primary" />
                        </div>
                        <script>
                            function submitForm() {
                                var form = document.getElementById("myForm");
                                form.submit();
                            }
                        </script>
                    </form>
                </div>
            </div>

            <div class="body">
                <div class="">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>Sender name</th>
                                <th>Product name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Sale</th>
                                <th>Category Name</th>

                            </tr>
                        </thead>
                      
                        <tbody>
                            @foreach (var item in Model.Item1)
                            {

                                <tr>
                                    <td>@item.Userr.Username</td>
                                    <td>@item.product.Namee</td>
                                    <td>@item.Orderr.Quantity</td>
                                    <td class="font-weight-bold">$@item.product.Price</td>
                                    <td>@item.product.Sale</td>

                                    <td class="font-weight-medium"><div class="badge badge-success">@item.Category.CategoryName</div></td>
                              @*      <td><img src="@Url.Content("~/Images/"+item.Category.Imagepath)" style="width:40px;height:40px;border-radius:2%;" /></td>
                                    <td>@item.Orderr.DateOrder</td>
                                    <td>@item.Orderr.DateEnd</td>*@
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Profits</th>
                                <td>@ViewBag.Profits</td>

                            </tr>
                        </tfoot>
                        <tfoot>
                            <tr>
                                <th>Total Price</th>
                                <td>@ViewBag.TotalPrice</td>

                            </tr>
                        </tfoot>
                        <tfoot>
                            <tr>

                                <th>Total Quantity</th>
                                <td>@ViewBag.Quantity</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

