
<!DOCTYPE html>
<html lang="en">


<!-- index.html  21 Nov 2019 03:44:50 GMT -->
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title> Maker Dashboard </title>
    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/MakerAssets/assets/css/app.min.css">
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/MakerAssets/assets/css/style.css">
    <link rel="stylesheet" href="~/MakerAssets/assets/css/components.css">
    <!-- Custom style CSS -->
    <link rel="stylesheet" href="~/MakerAssets/assets/css/custom.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>

    <style>
        .form-group {
            position: relative;
        }

            .form-group .password-toggle-icon {
                position: absolute;
                right: 20px;
                top: 70%;
                transform: translateY(-50%);
                cursor: pointer;
            }

        .toggle-password-show {
            display: none;
        }

        .toggle-password-hide {
            display: inline-block;
        }

    </style>
</head>

<body>
    <div class="loader"></div>
    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            <div class="navbar-bg"></div>
            <nav class="navbar navbar-expand-lg main-navbar sticky">
                <ul class="navbar-nav navbar-right">
                    <li class="dropdown dropdown-list-toggle">
                        
                    </li>
                        @if (ViewBag.ID != null || ViewBag.MName != null)

                    {
                       


                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown">
                                <h5> @ViewBag.MName</h5>
                            </a>


                            <div class="dropdown-menu dropdown-menu-right pullDown">
                                <div class="dropdown-title">Hello @ViewBag.MName</div>
                                <a asp-controller="Maker" asp-action="editprofile" asp-route-id="@ViewBag.ID" class="dropdown-item has-icon">
                                    <i class="far
										fa-user"></i> @ViewBag.MName
                                </a> 
                                <div class="dropdown-divider"></div>
                                <a asp-controller="Auth" asp-action="Logout" class="dropdown-item has-icon text-danger">
                                    <i class="fas fa-sign-out-alt"></i>
                                    Logout
                                </a>
                                
                                

                            </div>
                        </li>
                    }

                </ul>
            </nav>
            <div class="main-sidebar sidebar-style-2">
                <aside id="sidebar-wrapper">
                    <div class="sidebar-brand">
                        <a href="index.html">
                       <span class="logo-name">Maker</span>
                        </a>
                    </div>
                    <ul class="sidebar-menu">
                        @if (ViewBag.ID != null || ViewBag.MName != null)

                        {


                            <li class="dropdown active">
                                <a asp-action="Index" asp-controller="Maker" class="nav-link"><span>Dashboard</span></a>
                            </li>
                            <li class="dropdown active">
                                <a asp-action="Index" asp-controller="Products" class=" nav-link">
                             <span>Gifts</span>
                                </a>

                            </li>
                             <li class="dropdown active">
                                <a asp-action="Testimonial" asp-controller="Maker" class=" nav-link">
                                    <span>Testimonial</span>
                                </a>

                            </li>
                            <li class="dropdown active">
                                <a asp-action="yourTestimonial" asp-controller="Maker" class=" nav-link">
                                    <span>Your Testimonials</span>
                                </a>

                            </li>
                            
                        }
                       
                    </ul>
                </aside>
            </div>


            <div class="main-content">
                @RenderBody()
            </div>

            <footer class="main-footer">
              
                <div class="footer-right">
                </div>
            </footer>
        </div>
    </div>
    <!-- General JS Scripts -->
    <script src="~/MakerAssets/assets/js/app.min.js"></script>
    <!-- JS Libraies -->
    <script src="~/MakerAssets/assets/bundles/apexcharts/apexcharts.min.js"></script>
    <!-- Page Specific JS File -->
    <script src="~/MakerAssets/assets/js/page/index.js"></script>
    <!-- Template JS File -->
    <script src="~/MakerAssets/assets/js/scripts.js"></script>
    <!-- Custom JS File -->
    <script src="~/MakerAssets/assets/js/custom.js"></script>
</body>


<!-- index.html  21 Nov 2019 03:47:04 GMT -->
</html>